<div class="user-form">
  <div class="columns is-centered">
    <div class="column is-one-third is-narrow">
      <article class="tile is-vertical notification is-danger">
        <p class="title has-text-centered">Log in</p>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class="field">
              <%= f.label :email, class:"label has-text-white" %>
              <div class="control has-icons-left">
                <%= f.email_field :email, autofocus: true, class:"input" %>
                <span class="icon is-small is-left">
                  <i class="fa fa-envelope"></i>
                </span>
              </div>
            </div>
            <div class="field">
              <%= f.label :password, class:"label has-text-white" %>
              <% if @minimum_password_length %>
              <% end %>
              <div class="control has-icons-left">
                <%= f.password_field :password, autocomplete: "off", class:"input" %>
                <span class="icon is-small is-left">
                  <i class="fa fa-key"></i>
                </span>
              </div>
            </div><br>
            <% if devise_mapping.rememberable? -%>
              <div class="field has-text-centered">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
            <div class="actions has-text-centered">
              <%= f.submit "Log in", class:"button is-white" %>
            </div>
          <% end %>
        </article>
    </div>
  </div>
</div>
